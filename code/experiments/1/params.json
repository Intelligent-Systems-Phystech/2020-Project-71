{
  "data_type": "mnist_left_right",
  "num_epochs": 3,
  "batch_size": 32,
  "learning_rate": 0.01,
  "models": {
    "encoder_input": {
      "arch": [
        {"type":  "conv", "n_in": 1, "n_out": 16},
        {"type":  "pool"},
        {"type":  "conv", "n_in": 16, "n_out": 8}
      ]
    },
    "decoder_input": {
      "arch": [
        {"type":  "conv", "n_in": 8, "n_out": 16},
        {"type":  "upsample"},
        {"type":  "conv", "n_in": 16, "n_out": 1, "activation_fn":  "sigmoid"}
      ]
    },
    "encoder_target": {
      "arch": [
        {"type":  "conv", "n_in": 1, "n_out": 16},
        {"type":  "pool"},
        {"type":  "conv", "n_in": 16, "n_out": 8}
      ]
    },
    "decoder_target": {
      "arch": [
        {"type":  "conv", "n_in": 8, "n_out": 16},
        {"type":  "upsample"},
        {"type":  "conv", "n_in": 16, "n_out": 1, "activation_fn":  "sigmoid"}
      ]
    },
    "alignment": {
      "arch": {
      }
    }
  },
  "losses": {
    "reconstruct_input": {
      "scale": 1.0,
      "type": "mse"
    },
    "reconstruct_target": {
      "scale": 1.0,
      "type": "mse"
    },
    "coherence": {
      "scale" : 1.0,
      "type": "mse"
    },
    "alignment": {
      "scale": 1.0,
      "type": "mse"
    },
    "prediction": {
      "scale": 1.0,
      "type": "mse"
    }
  },
  "optimizer": {
    "type": "sgd",
    "kwargs": {"lr": 0.001}
  },
  "summary": {
    "train_frequency": 100,
    "save_frequency": 200
  }
}